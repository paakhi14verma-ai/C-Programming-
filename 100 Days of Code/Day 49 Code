Q97: Print the initials of a name.

/*
Sample Test Cases:
Input 1:
John Doe
Output 1:
J.D.

*/

Code:
#include <stdio.h>

int main() {
    char str[100];
    int i;

    printf("Enter a name: ");
    fgets(str, sizeof(str), stdin);

    if (str[0] != ' ' && str[0] != '\n')
        printf("%c.", str[0]);

    for (i = 1; str[i] != '\0'; i++) {
        if (str[i - 1] == ' ' && str[i] != ' ' && str[i] != '\n') {
            printf("%c.", str[i]);
        }
    }

    printf("\n");
    return 0;
}





Q98: Print initials of a name with the surname displayed in full.

/*
Sample Test Cases:
Input 1:
John David Doe
Output 1:
J.D. Doe

*/

Code:
#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, lastSpace = -1;

    printf("Enter a name: ");
    fgets(str, sizeof(str), stdin);

    int len = strlen(str);
    if (str[len - 1] == '\n')
        str[len - 1] = '\0';

    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] == ' ')
            lastSpace = i;
    }

    if (str[0] != ' ')
        printf("%c.", str[0]); // first initial

    for (i = 1; i < lastSpace; i++) {
        if (str[i - 1] == ' ' && str[i] != ' ')
            printf("%c.", str[i]);
    }

    printf(" ");

    if (lastSpace != -1)
        printf("%s\n", &str[lastSpace + 1]);
    else
        printf("%s\n", str); // if only one name is entered

    return 0;
}
